         button.delBtn( data-target='#DelModal' data-toggle='modal' data-id=''+skill._id data-type='skill') del
     
   
   
 
   .UserInfForm.col-sm-4
    form.form-horizontal(method='post')
     .form-group
      .col-sm-10
       input.form-control(name='FirstNameI' placeholder='First name input ', value=''+CV.CVFirstName)
       
     .form-group
      .col-sm-10
       input.form-control(name='LastNameI' placeholder='Last name input ', value=''+CV.CVLastName)
     

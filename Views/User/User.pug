      button.btn.btn-primary.SavePersonalInf Save 
 
 

        //Save Experiance Mol

  .modal.fade(id="AddExpModal" role="dialog" tabindex="-1")
     .modal-dialog(role="document")
       .modal-content
         .modal-header
             h5.modal-title Add Experiance Modal
         .modal-body
              form.form-horizontal(method='post')
               .form-group
                .col-sm-12
                 input.form-control(name='ExpTitleI' placeholder='Experiance Title' required)
                
               .form-group
                .col-sm-12
                  textarea.form-control(name='ExpDescI' placeholder='Experiance Descreption' required)
               
               .form-group
                .col-sm-12
                 input.form-control(name='ExpJobI' placeholder='Experiance Job' required)
               
               
               .form-group
                .col-sm-12
                   input.form-control(type='text' name='ExpFromI' placeholder='From'  onfocus="(this.type='date')" onblur="(this.type='text')"  required)
                
               .form-group
                .col-sm-12
                  input.form-control(type='text' name='ExpToI' placeholder='To'  onfocus="(this.type='date')" onblur="(this.type='text')"	 required)
               
               .form-group
                .col-sm-12
                 label Skills:
                 .SkillSel
                  each skill in CV.CVSkill 
                   .SkillSelOne(style='border-color:'+skill.SkillColor,data-skillname=''+skill._id, data-status='0')
                    span=skill.SkillTitle



         .modal-footer
          button.btn.btn-primary.SaveExpBtn Save
          button.btn.btn-secondary( type="button" data-dismiss="modal") Close
  
             //End Save Experiance Mol




  //Update Modal 
  
  .modal.fade(id="UpdateModal" role="dialog" tabindex="-1")
     .modal-dialog(role="document")
       .modal-content
         .modal-header
             h5.modal-title Update Modal
         .modal-body
          .updateSpinner
           .spinner
            .bounce1
            .bounce2
            .bounce3
          form.form-horizontal(method='post').updateForm
               .form-group
                .col-sm-12
                 input.form-control(name='TitleUI' placeholder='Experiance Title' required)
                
               .form-group
                .col-sm-12
                  textarea.form-control(name='DescUI' placeholder='Experiance Descreption' required)
               
               
               .form-group
                .col-sm-12
                 input.form-control(name='JobUI' placeholder='Experiance Job' )
               
               .form-group
                .col-sm-12
                   input.form-control(type='date' name='FromUI' required)
                
               .form-group
                .col-sm-12
                  input.form-control(type='date' name='ToUI' required)
                  input(type='hidden',name='IdUI')
                  input(type='hidden', name='TypeUI')
               .form-group
                .col-sm-12
                 label Skills:
                 .SkillSel
                  each skill in CV.CVSkill 
                   .SkillSelOne(style='border-color:'+skill.SkillColor,data-skillname=''+skill._id, data-status='0')
                    span=skill.SkillTitle



         .modal-footer
          button.btn.btn-success.UpdateBtn Update
          button.btn.btn-secondary( type="button" data-dismiss="modal") Close
  
       //End Update Experiance Mol

       // Del experiance modal 
    
  .modal.fade(id="DelModal" role="dialog" tabindex="-1")

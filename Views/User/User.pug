block content 
 h4 hello Login page
 
 .container-fluid
  .row
   .UserCv.col-sm-8




    .Exp
      br
      br
      h2.text-center Experianc
     
      .ExpAdd
       button(data-toggle="modal" class="btn btn-success crBtn" data-target="#AddExpModal") Create Experiance
     
      .updateExpSpinner
       .spinner
        .bounce1
        .bounce2
        .bounce3
      .ExpList
       each exp in CV.CVExp
        .ExpOne
         .card
          .opts
            button.statusBtn(data-id=''+exp._id data-type='exp' data-status=''+exp.ExpStatus value=''+exp.ExpStatus) eye
            button.updateBtn(data-toggle='modal' data-id=''+exp._id, data-target='#UpdateModal' data-type='exp') Upd
